<%= provide(:title, "Submit your listing") %>

<h1>Submit your listing</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
	<%= form_for(@listing) do |f| %>
		<%= f.label :title %>
		<%= f.text_field :title, class: 'form-control'  %>
		<%= f.label "Country" %>
		<%= f.collection_select :country_id, @countries, :id, :name, :prompt => true %>
		<%= f.label :max_guests %>
		<%= f.text_field :max_guests, class: 'form-control'  %>
		<%= f.label :description %>
		<%= f.text_field :description, class: 'form-control'  %>
		<%= f.label "Available Dates" %>
		<%= f.text_field :available_dates, id: 'date-field',class: 'form-control'  %>
		<%= f.submit "Click here to submit your listing", class: "btn btn-primary" %>
	<% end %>
  </div>
</div>
